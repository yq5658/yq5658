<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="net.laoyeye.yyblog.mapper.AboutMapper">
    <resultMap id="BaseResultMap" type="net.laoyeye.yyblog.model.AboutDO">
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="name" property="name" jdbcType="VARCHAR" />
        <result column="tab" property="tab" jdbcType="VARCHAR" />
    </resultMap>
    <resultMap id="ResultMapWithBLOBs" type="net.laoyeye.yyblog.model.AboutDO"
        extends="BaseResultMap">
        <result column="content" property="content" jdbcType="LONGVARCHAR" />
    </resultMap>

    <sql id="Base_Column_List">
        id, name, tab
    </sql>
    <sql id="Blob_Column_List">
        content
    </sql>

    <select id="getAboutByTab" resultMap="ResultMapWithBLOBs" parameterType="java.lang.String">
        select
        <include refid="Base_Column_List" />
        ,
        <include refid="Blob_Column_List" />
        from t_about
        where tab = #{tab,jdbcType=INTEGER}
    </select>

    <update id="updateByTab" parameterType="net.laoyeye.yyblog.model.AboutDO">
        UPDATE t_about
        <set>
            <if test="name != null">
                name = #{name,jdbcType=VARCHAR},
            </if>
            <if test="content != null">
                content = #{content,jdbcType=LONGVARCHAR},
            </if>
        </set>
        where tab = #{tab,jdbcType=VARCHAR}
    </update>
    
    <select id="listAll" resultMap="ResultMapWithBLOBs" parameterType="java.lang.String">
        select
        <include refid="Base_Column_List" />
        ,
        <include refid="Blob_Column_List" />
        from t_about
    </select>
</mapper>